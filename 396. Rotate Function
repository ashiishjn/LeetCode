class Solution {
    public int maxRotateFunction(int[] nums) 
    {
        int i,sum=0,ans=0,max,n=nums.length-1;
        for(i=0;i<=n;i++)
        {
            sum+=nums[i];
            ans+=nums[i]*i;
        }
        max=ans;
        for(i=0;i<=n;i++)
        {
            ans=ans-sum+nums[i]+(nums[i]*n);
            max=Math.max(ans,max);
        }
        return max;
    }
}
